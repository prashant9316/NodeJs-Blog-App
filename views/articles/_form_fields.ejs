<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" value="<%= article.title %>" id="title" class="form-control mb-2">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mb-2"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mb-2" rows="7"><%= article.markdown %></textarea>
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input type="text" name="author" value="<%= article.author %>" required id="author" class="form-control mb-2">
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>